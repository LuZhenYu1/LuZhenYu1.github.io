<table width="200" border="1">
  <tr>
    <td onmousemove="MM_showHideLayers('apDiv1','','show')" onmouseout="MM_showHideLayers('apDiv1','','hide')" onfocus="MM_showHideLayers('apDiv1','','hide')">显示图层一</td>
  </tr>
  <tr>
    <td onmousemove="MM_showHideLayers('apDiv2','','show')" onmouseout="MM_showHideLayers('apDiv2','','hide')" onfocus="MM_showHideLayers('apDiv2','','hide')">显示图层二</td>
  </tr>
